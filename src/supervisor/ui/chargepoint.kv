#:include ui/backgroundlabel.kv

# Charge Point status
<ChargePointWidget>:
    orientation: 'vertical'

    cp_id: "Charge Point"
    type: "None"
    status: "Dead"
    vendor: "OpenOCPP"
    model: "OpenOCPP simu"
    serial: "S/NABCED1234"
    nb_phases: 3
    max_setpoint: 20
    voltage: 230

    size_hint: None, None
    size: 440, 280

    BackgroundLabel:
        text: root.cp_id + " - " + root.status 
        halign: 'center'
        valign: 'middle'
        size_hint: None, None
        size: 400, 40
        bold: True
        color: (0, 0, 0, 1)
        background_color:  (0.5, 0.5, 0.5, 1) if root.status=="Dead" else self.accepted_color
        accepted_color:  (0, 1, 0, 1) if root.status=="Accepted" else self.pending_color
        pending_color:  (1, 1, 1, 1) if root.status=="Pending" else self.rejected_color
        rejected_color:  (1, 0, 0, 1) if root.status=="Rejected" else self.disconnected_color
        disconnected_color:  (1, 1, 0, 1)

    BoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        size_hint: None, None
        size: 400, 40

        Label:
            text: 'Vendor'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 150, 0

        Label:
            text: root.vendor
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: 1., 1.
            size: 0, 0

    BoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        size_hint: None, None
        size: 400, 40

        Label:
            text: 'Model'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 150, 0

        Label:
            text: root.model
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: 1., 1.
            size: 0, 0

    BoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        size_hint: None, None
        size: 400, 40

        Label:
            text: 'S/N'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 150, 0

        Label:
            text: root.serial
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: 1., 1.
            size: 0, 0

    BoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        size_hint: None, None
        size: 400, 40

        Label:
            text: 'Phases'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 150, 0

        Label:
            text: str(root.nb_phases)
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: 1., 1.
            size: 0, 0

    BoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        size_hint: None, None
        size: 400, 40

        Label:
            text: 'Max current' if root.type == 'AC' else 'Max power'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 150, 0


        Label:
            text: str(root.max_setpoint) + ' A' if root.type == 'AC' else str(root.max_setpoint) + ' Kw'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: 1., 1.
            size: 0, 0

    BoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        size_hint: None, None
        size: 400, 40

        Label:
            text: 'Voltage'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 150, 0


        Label:
            text: str(root.voltage) + ' V'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: 1., 1.
            size: 0, 0