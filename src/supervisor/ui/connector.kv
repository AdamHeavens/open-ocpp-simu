#:include ui/backgroundlabel.kv

# Connector of a Charge Point
<ConnectorWidget>:
    orientation: 'vertical'

    con_id: 1
    status: "Dead"
    max_current: 16
    consumption_l1: 0
    consumption_l2: 0
    consumption_l3: 0
    car_consumption_l1: sl_car_consumption_l1.value
    car_consumption_l2: sl_car_consumption_l2.value
    car_consumption_l3: sl_car_consumption_l3.value
    car_cable: sl_car_cable.value
    car_ready: not tb_car_ready.active
    id_tag: ti_id_tag.text

    sl_car_consumption_l1: sl_car_consumption_l1
    sl_car_consumption_l2: sl_car_consumption_l2
    sl_car_consumption_l3: sl_car_consumption_l3
    sl_car_cable: sl_car_cable
    tb_car_ready: tb_car_ready
    ti_id_tag: ti_id_tag
    bt_id_tag: bt_id_tag

    size_hint: None, None
    size: 400, 280

    connector_status_text: 'Connector : ' + str(root.con_id) + ' - ' + root.status
    connector_status_charging_text: self.connector_status_text + ' (' + str(root.consumption_l1) + '/' + str(root.consumption_l2) + '/' + str(root.consumption_l3) + 'A)'
    
    BackgroundLabel:
        text: root.connector_status_charging_text if root.status == "Charging" else root.connector_status_text
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: None, None
        size: 400, 40
        bold: True
        color: (0, 0, 0, 1)
        background_color:  (0.5, 0.5, 0.5, 1) if root.status=="Dead" else self.available_color
        available_color:  (0, 1, 0, 1) if root.status=="Available" else self.preparing_color
        preparing_color:  (0.5, 1, 0.5, 1) if root.status=="Preparing" else self.charging_color
        charging_color:  (0, 0, 1, 1) if root.status=="Charging" else self.suspendedevse_color
        suspendedevse_color:  (0, 0.7, 1, 1) if root.status=="SuspendedEVSE" else self.suspendedev_color
        suspendedev_color:  (0, 1, 1, 1) if root.status=="SuspendedEV" else self.finishing_color
        finishing_color:  (0, 1, 0.5, 1) if root.status=="Finishing" else self.reserved_color
        reserved_color:  (1, 1, 0, 1) if root.status=="Reserved" else self.unavailable_color
        unavailable_color:  (1, 0.5, 0, 1) if root.status=="Unavailable" else self.faulted_color
        faulted_color:  (1, 0, 0, 1) if root.status=="Faulted" else (1, 1, 1, 1)

    BoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        size_hint: None, None
        size: 400, 40

        Label:
            text: 'Car cable capacity'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 150, 0

        Slider:
            id: sl_car_cable
            min: 0
            max: 64
            step: 1
            orientation: 'horizontal'
            size_hint: None, 1.
            size: 150, 0

        Label:
            text: str(sl_car_cable.value) + 'A'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 50, 0

    BoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        size_hint: None, None
        size: 400, 40

        Label:
            text: 'Car suspend'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 150, 0

        CheckBox:
            id: tb_car_ready
            active: False
            

    BoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        size_hint: None, None
        size: 400, 40

        Label:
            text: 'Car consumption Phase1'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 150, 0

        Slider:
            id: sl_car_consumption_l1
            min: 0
            max: root.max_current
            step: 1
            orientation: 'horizontal'
            size_hint: None, 1.
            size: 150, 0

        Label:
            text: str(sl_car_consumption_l1.value) + 'A'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 50, 0

    BoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        size_hint: None, None
        size: 400, 40

        Label:
            text: 'Car consumption Phase2'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 150, 0

        Slider:
            id: sl_car_consumption_l2
            min: 0
            max: root.max_current
            step: 1
            orientation: 'horizontal'
            size_hint: None, 1.
            size: 150, 0

        Label:
            text: str(sl_car_consumption_l2.value) + 'A'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 50, 0

    BoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        size_hint: None, None
        size: 400, 40

        Label:
            text: 'Car consumption Phase3'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 150, 0

        Slider:
            id: sl_car_consumption_l3
            min: 0
            max: root.max_current
            step: 1
            orientation: 'horizontal'
            size_hint: None, 1.
            size: 150, 0

        Label:
            text: str(sl_car_consumption_l3.value) + 'A'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 50, 0
    
    BoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 5
        size_hint: None, None
        size: 400, 40

        Label:
            text: 'Id tag'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 150, 0

        TextInput:
            id: ti_id_tag
            text_size: self.size
            multiline: False
            size_hint: None, 1.
            size: 150, 0

        Button:
            id: bt_id_tag
            text: 'Pass'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            size_hint: None, 1.
            size: 50, 0
            id_tag: root.id_tag
            con_id: root.con_id
